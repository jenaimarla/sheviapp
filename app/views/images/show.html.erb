<div class="image-container">
  <div class="image-box">
    <%= cl_image_tag @image.image.key %>
  </div>

  <div class="image-info">
    <div class="image-info1">
      <h1><%= link_to @image.photo.category  %></h1>
      <h1> <%= @image.name %></h1>
    </div>
    <div class="image-other">
        <h1> <%= @image.information %> </h1>

        <% if @image.pre_order=='yes' %>
          <h1>PRE ORDER</h1>

          <h1>A1 / <%= @image.price_a1 %>€
            <%= simple_form_for [@image, @order_photo] do |f| %>
            <%= f.input :quantity, placeholder: '1', input_html: { value: '1', min: '1', step: 'any' } %>
            <%= f.submit "Add to card", class: 'btn-primary' %>
          <% end %></h1>
          <h1>A2 / <%= @image.price_a2 %>€
            <%= simple_form_for [@image, @order_photo] do |f| %>
        <%= f.input :quantity, placeholder: '1', input_html: { value: '1', min: '1', step: 'any' } %>
        <%= f.submit "Add to card", class: 'btn-primary' %>
      <% end %></h1>
        <% else %>
          <h1>No pre-order</h1>
        <% end %>
    </div>
  </div>
</div>

