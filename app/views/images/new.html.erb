
<div class="form-photo">

  <h1>Add a new image</h1>

<%= simple_form_for [ @photo, @image ] do |f| %>
  <%= f.input :name %>
  <%= f.input :information %>
  <%= f.input :pre_order %>
  <%= f.input :format1 %>
    <%= f.input :format2 %>
  <%= f.input :price_a1, input_html: { min: '1', step: 'any' } %>
  <%= f.input :price_a2, input_html: { min: '1', step: 'any' }%>
   <%= f.input :image, as: :file %>
  <%= f.submit "Submit image", class: "btn btn-primary" %>
<% end %>
</div>

