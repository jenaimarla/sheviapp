<div class="order">

    <div class="order-show">

  <br>
      <% if @order.state == 'pending' %>
        <div class="pending">
          <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
          <h1>sorry, there was a problem with your payment</h1>
          <h1><%= link_to 'try again', creations_path  %> </h1>
        </div>
        <% end %>

      <% if @order.state == 'paid' %>
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
        <h1>ISSUED ON <%= @order.created_at.to_date %></h1>
        <br><h1>PRODUCT <%= @order.creation.name %></h1>
        <br><h1>TOTAL<%= humanized_money_with_symbol @order.amount %></h1>
      <p> Thank you for your purchase</p>
     <% end %>
    </div>
</div>






