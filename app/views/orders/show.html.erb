    <div class="order-state">

      <% if @order.state == 'pending' %>
      <h1>Order #<%= @order.id %>- <small><span class="badge badge-primary"> <%= @order.state %></span></small></h1>
      <h1>No payment made. Please try again</h1>
      <% else %>
        <h1>Order #<%= @order.id %>- <small><span class="badge badge-second"> <%= @order.state %></span></small></h1>
          <h1>Issued on <%= @order.created_at.to_date %></h1>
          <h1>Poster "<%= @order.creation.name %>"</h1>
          <h1>Total<%= humanized_money_with_symbol @order.amount %></h1>
        <p> Thank you for your purchase</p>
      <% end %>

    </div>



</div>







