

<div class="payment-container">

    <div class="row py-4">
      <div class="col">
        <h1>Order #<%= @card.id %> <small><span class="badge badge-primary"><%= @card.state %></span></small></h1>

        <ul class="list-unstyled">
          <li><strong>ISSUED ON</strong> <%= @card.created_at.to_date %></li>
          <li><strong>TEDDY</strong> <%= @card.creation.name %></li>
          <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @card.amount %></li>
          </li>
        </ul>

        <p>Estimated delivery in <strong>5 business days</strong></p>
      </div>
    </div>

</div>
