<%= simple_form_for [ @theme ] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :information %>
  <%= f.input :pre_order %>
  <%= f.input :price_a1 %>
  <%= f.input :price_a2 %>
  <%= f.input :illustration, as: :file %>

  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
