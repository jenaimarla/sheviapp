<div class="theme-container">

  <div class="theme-box">
    <%= cl_image_tag @theme.illustration.key %>
  </div>

  <div class="theme-info">
    <div class="theme-info1">
    <h1><%= link_to @theme.title , poster_path%></h1>
    <h1> <%= @theme.description %></h1>
    </div>
    <div class="theme-other">
    <h1> <%= @theme.information %> </h1>
    <% if @theme.pre_order=='yes' %>
          <h1>ADD TO CART</h1>

      <h1>A1 - <%= @theme.price_a1 %>€</h1>
      <h1>A2 - <%= @theme.price_a2 %>€</h1>
      <% else %>
      <h1>No pre-order</h1>
  <% end %>
    </div>
  </div>
</div>
