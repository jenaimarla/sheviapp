<div class="form-poster">

<%= simple_form_for [ @poster, @theme ] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :information %>
  <%= f.input :pre_order %>
  <%= f.input :format %>
  <%= f.input :price, input_html: { min: '1', step: 'any' } %>
  <%= f.input :illustration, as: :file %>

  <%= f.submit "Submit image", class: "btn btn-primary" %>
<% end %>
</div>
