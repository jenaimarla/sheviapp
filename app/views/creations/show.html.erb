<div class="shop-show">

  <div class="shop-show1">

    <div class="shop-image">
      <%= cl_image_tag @creation.svg.key %>

    </div>

    <div class="shop-button">



      <div class="form-shop">
        <%= form_tag orders_path do %>
          <%= hidden_field_tag 'creation_id', @creation.id %>
          <%= submit_tag 'shop' %>
        <% end %>
      </div>

    </div>

  </div>

  <div class="shop-show2">

    <div class="shop-title">
      <h1><%= @creation.name %></h1>
         <% if current_user %>
            <div class="photo-options">
              <%= link_to 'Edit product', edit_creation_path(@creation) %>
              <%= link_to 'Delete product', creation_path(@creation),
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
            </div>
      <% end %>
    </div>



    <div class="shop-other">
      <h1> <%= @creation.description %></h1>
      <h1> <%= @creation.format %> / <%= humanized_money_with_symbol(@creation.price)%></h1>
    </div>

  </div>




</div>


