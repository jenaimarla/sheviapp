
<div class="poster-container2">
 <% @poster.themes.each do |theme| %>
 <div class="p3-container">
  <div class="poster-2">
      <%= cl_image_tag theme.illustration.key%>
    </div>
 <div class="poster-title">
    <%= link_to theme.description, theme_path(theme) %>
    </div>

    <div class="poster-options">
    <%= link_to 'Edit', edit_theme_path(theme) %>
    <%= link_to 'Delete image', theme_path(theme),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </div>
  </div>
  <% end %>

</div>


<div class="options">
<%= link_to 'add new poster',  new_poster_theme_path(@poster) %>
<%= link_to 'posters', posters_path  %>
</div>
